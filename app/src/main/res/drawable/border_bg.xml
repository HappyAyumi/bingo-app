<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 白い背景 -->
    <solid android:color="#FFFFFF" />

    <!-- 薄いグレーの枠線 -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- 少しだけ角を丸める -->
    <corners android:radius="4dp" />

    <!-- ほんの少しだけ影の余白 -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>

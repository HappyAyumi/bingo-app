<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- タイトル -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="テーマ別ビンゴアプリ"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp" />

    <!-- テーマ選択 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="テーマを選択:"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/themeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp" />

    <!-- 集中モード -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/focusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="集中モード開始" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:text="" />

    </LinearLayout>

    <!-- ビンゴボード -->
    <GridLayout
        android:id="@+id/bingoGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="4"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"
        android:background="@android:color/darker_gray" />

    <!-- ボタン群 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="リセット"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/levelResetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="レベルリセット" />
    </LinearLayout>

    <!-- レベル＆キャラ表示 -->
    <LinearLayout
        android:id="@+id/levelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- レベル表示 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/levelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="凡人 (Lv.1)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <ProgressBar
                android:id="@+id/levelProgress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0" />
        </LinearLayout>

        <!-- キャラクター画像 -->
        <ImageView
            android:id="@+id/characterImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/angel"
            android:contentDescription="キャラクター"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <Button
        android:id="@+id/openPendingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="承認待ちを確認する"
        android:layout_marginTop="16dp" />

</LinearLayout>